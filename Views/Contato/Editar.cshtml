@model ProjectMvc.Models.Contato

@{
    ViewData["Title"] = "Editar novo contato";
}

<h1>Editar novo contato</h1>

<hr/>

<div class="row">
    <div class=col-md-4>
        <form asp-action="Editar">
            <div class="form-group">
                <label asp-form="Nome" class="control-label"></label>
                <input asp-form="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-form="Telefone" class="control-label"></label>
                <input asp-form="Telefone" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-form="Ativo" class="control-label"></label>
                <input type="checkbox" asp-form="Ativo" class="form-check-input" />
            </div>

            <br>

            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr/>

<div>
    <a asp-action="Index"></a>
</div>